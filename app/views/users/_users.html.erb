<% if users.any? %>

  <ul class="media-list">

    <% users.each do |user| %>

    <li class="media">
      <div class="media-left">
        <% if user.image? %>
          <%= image_tag asset_path(user.image.to_s), height: "100" %>
        <% else %>
          <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        <% end %>
      </div>
      <div class="media-body">
        <div><%= user.name %></div>
        <div>
          <p><%= link_to 'View profile', user_path(user) %></p>
          <!-- link to users#show -->
        </div>
      </div>
    </li>
    <% end %>
  </ul>
<%= paginate users %>

<% end %> 