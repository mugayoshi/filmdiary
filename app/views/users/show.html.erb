<div class="row">
  <aside class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @user.name %></h3>
      </div>
      <div class="panel-body">
        <% if @user.image? %>
          <%= image_tag @user.image.url, height: "150"%>
        <% else %>
          <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        <% end %>
      </div>
    </div>
  </aside>
  <div class="col-xs-8">
    <% if current_user == @user %>
      <%= link_to 'Edit', edit_user_path, class: 'btn btn-lg btn-primary' %>
    <% end %>
    <ul class="nav nav-tabs nav-justified">
      <li><a href="#">Film History</a></li>
      
    </ul>
  </div>
</div>

<div class="row">
  <%= render 'films/films', films: @watched_films %>
  
</div>