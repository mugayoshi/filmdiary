<div class="row">
  <aside class="col-xs-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @film.title %></h3>
      </div>
      <div class="panel-body">
        <%= image_tag asset_path(@film.image.to_s), width: '240', height: '160' %>
      </div>
    </div>
    
  </aside>
  <div class="col-xs-6 container">
    <div class="panel panel-default">
      <% if current_user.admin? %>
        <div>
          <%= link_to 'Edit', edit_film_path, class: 'btn btn-lg btn-primary' %>
        </div>
      <% end %>
      
      <div>
        Director<br> <%= @film.director %>
      </div>
      <div>
        Released data<br> <%= @film.release_date %>
      </div>
      
    </div>
  </div>
</div>

<div class="row">
  <aside class="col-xs-6">
    <%= render 'watch_relations/watch_button', film: @film %>
  </aside>
  <aside class="col-xs-6">
    <div>
        <%= @film.description %>
      </div>
  </aside>
</div>