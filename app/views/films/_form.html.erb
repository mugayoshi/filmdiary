<%= form_for(@film) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
    <div class="form-group">
      <%= f.label :title, 'Title' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :director, 'Director' %>
      <%= f.text_field :director, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :image, 'Film Image' %>
      <%= f.file_field :image, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :release_date, 'Release Date' %>
      <%= f.date_select :release_date, 
          {start_year: 1900, end_year: (Time.now.year)
          },
          class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :original_title, 'Original Title' %>
      <%= f.text_field :original_title, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :lang, 'lang' %>
      <%= f.text_field :lang, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :description, 'description' %>
      <%= f.text_area :description, height: "40", class: 'form-control' %>
    </div>

  <%= f.submit 'Submit', class: 'btn btn-primary btn-block' %>

<% end %>